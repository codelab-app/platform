{
  "IamRoleLambdaExecution": {
    "Type": "AWS::IAM::Role",
    "Properties": {
      "AssumeRolePolicyDocument": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Principal": {
              "Service": ["lambda.amazonaws.com"]
            },
            "Action": ["sts:AssumeRole"]
          }
        ]
      },
      "Policies": [
        {
          "PolicyName": {
            "Fn::Join": ["-", ["codelab-nest-cli", "dev", "lambda"]]
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "logs:CreateLogStream",
                  "logs:CreateLogGroup",
                  "logs:TagResource"
                ],
                "Resource": [
                  {
                    "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/codelab-nest-cli-dev*:*"
                  }
                ]
              },
              {
                "Effect": "Allow",
                "Action": ["logs:PutLogEvents"],
                "Resource": [
                  {
                    "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/codelab-nest-cli-dev*:*:*"
                  }
                ]
              }
            ]
          }
        }
      ],
      "Path": "/",
      "RoleName": {
        "Fn::Join": [
          "-",
          [
            "codelab-nest-cli",
            "dev",
            {
              "Ref": "AWS::Region"
            },
            "lambdaRole"
          ]
        ]
      }
    }
  }
}
