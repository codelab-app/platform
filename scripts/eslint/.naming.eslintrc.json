{
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "plugins": ["react"],
      "files": ["*.tsx"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "case": "pascalCase",
            "ignore": [
              ".*\\.hook\\.tsx?$",
              ".*\\.spec\\.tsx?$",
              "^preview\\.tsx",
              "^_app\\.tsx",
              "^_document\\.tsx"
            ]
          }
        ]
      }
    },
    {
      "files": ["*.hook.tsx?"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "case": "camelCase"
          }
        ]
      }
    },
    {
      "files": ["*.ts"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "camelCase": false,
              "pascalCase": false,
              "kebabCase": true
            },
            "ignore": [".*\\.hook\\.tsx?$"]
          }
        ],
        "@typescript-eslint/naming-convention": [
          "error",
          {
            "selector": ["typeProperty"],
            "format": ["camelCase", "PascalCase"],
            "filter": {
              "regex": "^data-",
              "match": false
            },
            "leadingUnderscore": "allowSingleOrDouble"
          },
          // DTO should be Dto
          // {
          //   "selector": ["typeAlias", "interface"],
          //   "format": ["PascalCase"],
          //   "filter": {
          //     "regex": "DTO",
          //     "match": true
          //   },
          //   "custom": {
          //     "regex": "Dto",
          //     "match": true
          //   }
          // }
          // DTO should be Dto
          {
            "selector": ["parameter", "variable"],
            "format": ["camelCase"],
            "filter": {
              "regex": "DTO",
              "match": true
            },
            "custom": {
              "regex": "Dto",
              "match": true
            }
          }
        ]
      }
    }
    // {
    //   "files": ["**/app/**/*", "*.query.ts", "*.fragment.ts"],
    //   "rules": {
    //     "unicorn/filename-case": "off"
    //   }
    // }
  ]
}
