{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node",
      "styled-components"
    ],
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "tailwind.config.cjs",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "files": [],
  "references": [
    {
      "path": "../../libs/frontend/presentation/components/fancybox"
    },
    {
      "path": "../../libs/shared/utils"
    },
    {
      "path": "../../libs/shared/config/builder"
    },
    {
      "path": "../../libs/shared/infra/typebox"
    },
    {
      "path": "../../libs/shared/config/env"
    },
    {
      "path": "../../libs/frontend/abstract/application"
    }
  ]
}
