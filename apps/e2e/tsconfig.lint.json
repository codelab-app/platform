{
  // Used by tsc for checking type errors
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2018",
    "lib": ["es2017", "dom"],
    "strict": true,
    "outDir": "../../dist/out-tsc",
    "allowJs": true,
    // https://github.com/cypress-io/cypress/issues/22059
    "types": [
      // "cypress",
      "node",
      "@testing-library/cypress",
      "jest",
      "worker-loader"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "index.d.ts",
    "cypress.ci.config.ts",
    "cypress.test.config.ts"
  ]
}
