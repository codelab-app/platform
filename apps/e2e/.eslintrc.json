{
  "extends": [
    "plugin:cypress/recommended",
    "../../.eslintrc.json",
    "../../scripts/eslint/.cypress.eslintrc.json"
  ],
  "plugins": [],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["apps/e2e/tsconfig(.*)?.json"]
      },
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["*.spec*.ts"],
      "rules": {}
    },
    {
      "files": ["*.graphql"],
      "rules": {}
    }
  ]
}
