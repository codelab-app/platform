{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/builder-e2e/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nrwl/cypress:cypress",
      "options": {
        "cypressConfig": "apps/builder-e2e/cypress.json",
        "tsConfig": "./tsconfig.base.json",
        "baseUrl": "http://127.0.0.1:3001",
        "browser": "electron"
      },
      "configurations": {
        "ci": {
          "baseUrl": "http://127.0.0.1:3000",
          "cypressConfig": "apps/builder-e2e/cypress.ci.json",
          "devServerTarget": "builder-e2e:serve:ci",
          "record": true
        },
        "test": {
          "cypressConfig": "apps/builder-e2e/cypress.test.json",
          "devServerTarget": "builder-e2e:serve:test",
          "record": false
        },
        "dev": {
          "cypressConfig": "apps/builder-e2e/cypress.test.json",
          "devServerTarget": "builder-e2e:serve:dev",
          "watch": true,
          "exit": false
        },
        "start": {
          "cypressConfig": "apps/builder-e2e/cypress.ci.json",
          "baseUrl": "http://127.0.0.1:3000",
          "watch": true,
          "exit": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": true,
        "readyWhen": "READY"
      },
      "configurations": {
        "dev": {
          "commands": [
            {
              "command": "npx wait-on 'http://127.0.0.1:3001' && echo 'READY'"
            },
            {
              "command": "npx env-cmd -f .env.test nx serve builder -c test",
              "forwardAllArgs": false
            }
          ]
        },
        "ci": {
          "commands": [
            {
              "command": "npx wait-on 'http://127.0.0.1:3000' && echo 'READY'"
            },
            {
              "command": "npx next start dist/apps/builder --port 3000",
              "forwardAllArgs": false
            }
          ]
        },
        "test": {
          "commands": [
            {
              "command": "npx wait-on 'http://127.0.0.1:3001' && echo 'READY'"
            },
            {
              "command": "npx env-cmd -f .env.test next start dist/apps/builder-test --port 3001",
              "forwardAllArgs": false
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/builder-e2e/**/*.{js,ts}"]
      },
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": [],
  "implicitDependencies": ["builder"]
}
