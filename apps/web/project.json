{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "tags": ["projectName:web", "projectType:application", "type:concrete"],
  "implicitDependencies": [],
  "generators": {},
  "targets": {
    "build": {
      "defaultConfiguration": "dev",
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/web",
        "postcssConfig": "apps/web/postcss.config.js"
      },
      "configurations": {
        "dev": {},
        "ci": {},
        "test": {
          "outputPath": "dist/apps/web-test"
        },
        "prod": {}
      }
    },
    "serve": {
      "defaultConfiguration": "dev",
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "web:build",
        "port": 3000,
        "turbo": true,
        "hostname": "0.0.0.0",
        "maxWorkers": 4
      },
      "configurations": {
        "dev": {
          "buildTarget": "web:build:dev"
        },
        "test": {
          "buildTarget": "web:build:test",
          "port": 3001
        },
        "ci": {
          "buildTarget": "web:build:ci",
          "dev": false
        },
        "prod": {
          "buildTarget": "web:build:prod",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "web:build:prod"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/web/jest.config.ts",
        "reporters": ["default"],
        "runInBand": true
      },
      "configurations": {
        "test": {
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        },
        "ci": {
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        }
      },
      "outputs": ["{workspaceRoot}/coverage/apps/web"]
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/web/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/web",
        "configDir": "apps/web/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c apps/web/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build-storybook"],
      "options": {
        "buildTarget": "web:build-storybook",
        "staticFilePath": "dist/storybook/web",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "web:build-storybook:ci"
        }
      }
    }
  }
}
