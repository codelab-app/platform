{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node", "worker-loader", "cypher", "styled-components"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.graphql",
    "next-env.d.ts",
    "index.d.ts",
    ".next/types/**/*.ts",
    "../../dist/apps/web/.next/types/**/*.ts",
    "../../dist/apps/web-test/.next/types/**/*.ts",
    "postcss.config.cjs",
    "next.config.mjs"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.storybook.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
