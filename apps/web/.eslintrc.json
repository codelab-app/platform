{
  "extends": [
    "plugin:@nrwl/nx/react-typescript",
    "../../.eslintrc.json"
    // Conflict with `import`
    // "next",
    // "next/core-web-vitals"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "react/jsx-no-useless-fragment": "off",
        "@nrwl/nx/enforce-module-boundaries": "off",
        "react/no-unescaped-entities": "off",
        "react/display-name": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "env": {
    "jest": true
  }
}
