{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "jsxImportSource": "@emotion/react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "lib": ["es2021"],
    "types": ["node", "worker-loader", "@fancyapps/ui", "cypher"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "module": "esnext",
    "useDefineForClassFields": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.graphql",
    "next-env.d.ts",
    "index.d.ts",
    "middleware.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ]
}
