{
  "name": "nest-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nest-cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/nest-cli",
        "main": "apps/nest-cli/src/main.ts",
        "tsConfig": "apps/nest-cli/tsconfig.app.json",
        "assets": ["apps/nest-cli/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/nest-cli/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {
          "outputPath": "dist/apps/nest-cli-serverless",
          "main": "apps/nest-cli/src/serverless.ts"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "nest-cli:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "nest-cli:build:development"
        },
        "production": {
          "buildTarget": "nest-cli:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/nest-cli/**/*.ts"]
      },
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/nest-cli.xml",
          "quiet": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/nest-cli/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "test:integration": {
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["[i].spec.ts"],
        "jestConfig": "apps/nest-cli/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "parallel": 3,
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:unit": {
      "options": {
        "memoryLimit": 8192,
        "parallel": 3,
        "color": true,
        "testPathPattern": ["[^i].spec.ts"],
        "jestConfig": "apps/nest-cli/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    }
  },
  "tags": ["scope:backend"]
}
