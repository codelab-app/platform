{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": false,
    "types": ["node", "cypher", "multer"]
  },
  "exclude": ["jest.config.ts"],
  "include": ["webpack.config.js", "src/**/*.ts"],
  "references": [
    {
      "path": "../../libs/backend/infra/adapter/cli/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/abstract/core/tsconfig.lib.json"
    },
    {
      "path": "../../libs/backend/infra/adapter/logger/tsconfig.lib.json"
    }
  ]
}
