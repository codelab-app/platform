{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/cli",
        "main": "apps/cli/src/main.ts",
        "tsConfig": "apps/cli/tsconfig.app.json",
        "webpackConfig": "apps/cli/webpack.config.js",
        "target": "node",
        "compiler": "tsc",
        "additionalEntryPoints": []
      },
      "configurations": {
        "test": {},
        "ci": {},
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/cli/src/environments/environment.ts",
              "with": "apps/cli/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/node:node",
      "options": {
        "buildTarget": "cli:build",
        "runtimeArgs": ["-r", "./src/instrumentation"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/cli/**/*.ts"]
      },
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/cli.xml",
          "quiet": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/cli"],
      "options": {
        "jestConfig": "apps/cli/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      }
    },
    "test:integration": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["[i].spec.ts"],
        "jestConfig": "apps/cli/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {
          "parallel": 3
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/cli"]
    },
    "test:unit": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "parallel": 3,
        "color": true,
        "testPathPattern": ["[^i].spec.ts"],
        "jestConfig": "apps/cli/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {}
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/cli"]
    }
  },
  "tags": ["scope:backend"]
}
