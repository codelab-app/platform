{
  "extends": ["plugin:cypress/recommended", "../../.eslintrc.json"],
  "plugins": [],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["apps/platform-e2e/tsconfig(.*)?.json"]
      },
      "rules": {
        "import/no-unresolved": "error",
        "import/named": "error",
        // "jest/valid-expect": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["*.spec*.ts"],
      "rules": {}
    }
  ]
}
