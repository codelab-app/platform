{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "tags": ["projectName:api", "projectType:application", "type:concrete"],
  "targets": {
    "build": {
      "configurations": {
        "ci": {},
        "dev": {},
        "prod": {
          "optimization": true
        },
        "test": {
          "outputPath": "dist/apps/api-test"
        }
      },
      "defaultConfiguration": "prod",
      "executor": "@nx/webpack:webpack",
      "options": {
        "compiler": "tsc",
        "main": "apps/api/src/main.ts",
        "outputPath": "dist/apps/api",
        "target": "node",
        "tsConfig": "apps/api/tsconfig.json",
        "webpackConfig": "apps/api/webpack.config.js"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve": {
      "configurations": {
        "ci": {
          "buildTarget": "api:build:ci"
        },
        "dev": {},
        "prod": {
          "buildTarget": "api:build:prod"
        },
        "test": {
          "buildTarget": "api:build:test"
        }
      },
      "defaultConfiguration": "dev",
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api:build:dev"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts",
        "reporters": ["default"],
        "runInBand": true
      }
    },
    "test:integration": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["i.spec.ts"],
        "runInBand": true,
        "jestConfig": "apps/api/jest.config.ts"
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {
          "parallel": 3
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:unit": {
      "defaultConfiguration": "dev",
      "options": {
        "color": true,
        "memoryLimit": 8192,
        "parallel": 3,
        "testPathIgnorePatterns": ["i.spec.ts"],
        "jestConfig": "apps/api/jest.config.ts"
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {}
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    }
  }
}
