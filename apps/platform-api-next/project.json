{
  "name": "platform-api-next",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/platform-api-next",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/platform-api-next"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/platform-api-next"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "platform-api-next:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "platform-api-next:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "platform-api-next:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "platform-api-next:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/platform-api-next/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["scope:frontend"]
}
