{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/platform/src",
  "projectType": "application",
  "generators": {},
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/platform"
      },
      "configurations": {
        "test": {
          "root": "apps/platform",
          "outputPath": "dist/apps/platform-test"
        },
        "ci": {
          "root": "apps/platform",
          "outputPath": "dist/apps/platform"
        },
        "production": {
          "root": "./"
        },
        "development": {}
      }
    },
    "serve:test": {
      "executor": "nx:run-commands",
      "options": {},
      "configurations": {
        "test": {
          "commands": [
            {
              "command": "nx build platform -c test && next start dist/apps/platform-test --port 3001"
            }
          ]
        },
        "ci": {
          "commands": [
            {
              "command": "npx next start dist/apps/platform --port 3000"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "platform:build",
        "dev": true,
        "port": 3000,
        "hostname": "0.0.0.0",
        "maxWorkers": 4
      },
      "configurations": {
        "ci": {},
        "test": {
          "buildTarget": "platform:build:test",
          "memoryLimit": 8192,
          "port": 3001
        },
        "production": {
          "buildTarget": "platform:build:production",
          "dev": false
        },
        "development": {
          "buildTarget": "platform:build:development",
          "dev": true,
          "open": true
        }
      },
      "defaultConfiguration": "development"
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "platform:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/platform/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"],
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/platform.xml",
          "quiet": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/platform/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      },
      "configurations": {
        "test": {
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        },
        "ci": {
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        }
      },
      "outputs": ["{workspaceRoot}/coverage/apps/platform"]
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/platform/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/platform",
        "configDir": "apps/platform/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c apps/platform/.storybook --url=http://localhost:4400"
      }
    },
    "test:integration": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["[i].spec.ts"],
        "jestConfig": "apps/platform/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"],
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        },
        "ci": {
          "parallel": 3,
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/platform"]
    },
    "test:unit": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "parallel": 3,
        "color": true,
        "testPathPattern": ["[^i].spec.ts"],
        "jestConfig": "apps/platform/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"],
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        },
        "ci": {
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/platform"]
    }
  },
  "tags": ["scope:frontend"],
  "implicitDependencies": []
}
