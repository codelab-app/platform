{
  "defaultBase": "master",
  "useInferencePlugins": true,
  "parallel": 3,
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "canTrackAnalytics": true,
        "showUsageWarnings": true
      }
    }
  },
  "defaultProject": "web",
  "plugins": [
    "@codelab/tsc-check",
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ],
  "generators": {
    "@nx/workspace": {
      "library": {
        "linter": "eslint"
      }
    },
    "@nx/web": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nx/react": {
      "application": {
        "style": "css",
        "linter": "eslint"
      },
      "library": {
        "style": "styled-components",
        "linter": "eslint",
        "unitTestRunner": "none",
        "compiler": "swc",
        "component": false,
        "name": "",
        "directory": "libs/frontend/",
        "setParserOptionsProject": true,
        "strict": true,
        "importPath": "@codelab/frontend/",
        "tags": "scope:frontend"
      },
      "storybook-configuration": {
        "linter": "eslint"
      },
      "component": {
        "style": "css"
      }
    },
    "@nx/plugin": {
      "plugin": {
        "linter": "eslint"
      }
    },
    "@nx/node": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint",
        "setParserOptionsProject": true,
        "strict": true,
        "tags": "scope:backend"
      }
    },
    "@nx/next": {
      "application": {
        "style": "styled-components",
        "linter": "eslint"
      }
    },
    "@nx/js": {
      "library": {
        "unitTestRunner": "none",
        "bundler": "none",
        "setParserOptionsProject": true,
        "linter": "eslint",
        "strict": true,
        "importPath": "@codelab/frontend",
        "tags": "scope:shared",
        "useProjectJson": true,
        "skipPackageJson": true
      }
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["prod", "^prod"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^default"],
      "cache": true
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^prod",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ],
      "cache": true
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.ts"],
      "options": {
        "parallel": 1,
        "passWithNoTests": true
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "test.unit": {
          "reporters": ["default"],
          "color": true,
          "parallel": 3,
          "testPathIgnorePatterns": ["i.spec.ts"]
        },
        "ci.unit": {
          "ci": true,
          "codeCoverage": true,
          "color": true,
          "parallel": 3,
          "testPathIgnorePatterns": ["i.spec.ts"]
        },
        "test.integration": {
          "reporters": ["default"],
          "color": true,
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        },
        "ci.integration": {
          "ci": true,
          "codeCoverage": false,
          "color": true,
          "testPathPattern": ["i.spec.ts"],
          "runInBand": true
        }
      }
    },
    "@nx/eslint:lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true,
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"]
      },
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/{projectName}.xml",
          "quiet": true
        },
        "codegen": {
          "lintFilePatterns": ["{projectRoot}/**/*.gen.{ts,tsx}"],
          "errorOnUnmatchedPattern": false
        }
      }
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^default"]
    },
    "test": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/next:build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/workspace.json",
      "{workspaceRoot}/tslint.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.base.json"
    ],
    "prod": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/.storybook/**/*"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/tsconfig.storybook.json"
    ]
  },
  "release": {
    "version": {
      "preVersionCommand": "pnpm dlx nx run-many -t build"
    }
  }
}
