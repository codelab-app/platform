{
  // Inherit repo-wide defaults (target, module, paths, strict-mode, …)
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    // ---------- 1. Program building ----------
    "composite": true, // enables project references (.tsbuildinfo is produced)
    "incremental": true, // rebuilds only what changed

    // ---------- 2. Declaration output ----------
    "declaration": true, // emit *.d.ts
    "declarationMap": true, // …plus *.d.ts.map for editor go-to-def on consumers

    // ---------- 3. Source output ----------
    "sourceMap": true, // emit *.js.map
    "importHelpers": true,
    /* If you need “types only” builds, flip these two:
       "emitDeclarationOnly": true,
       "noEmit": false */

    // ---------- 5. Strictness that matters at build time ----------
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // ---------- 6. Ambient types required at runtime ----------
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  }
}
