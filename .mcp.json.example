{
  "mcpServers": {
    "browser-tools": {
      "command": "npx",
      "args": ["--prefer-offline", "-y", "@agentdeskai/browser-tools-mcp@latest"]
    },
    "context7": {
      "type": "sse",
      "url": "https://mcp.context7.com/sse"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    },
    "graphql": {
      "command": "npx",
      "args": ["--prefer-offline", "mcp-graphql"]
    },
    "neo4j-aura": {
      "command": "uvx",
      "args": ["mcp-neo4j-cypher@0.2.3", "--transport", "stdio"],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "password",
        "NEO4J_DATABASE": "neo4j"
      }
    },
    "notionMCP": {
      "command": "npx",
      "args": ["--prefer-offline", "-y", "mcp-remote", "https://mcp.notion.com/sse"]
    },
    "nx": {
      "command": "npx",
      "args": ["--prefer-offline", "nx-mcp"]
    },
    "openmemory": {
      "command": "npx",
      "args": ["--prefer-offline", "-y", "openmemory"],
      "env": {
        "OPENMEMORY_API_KEY": "${OPENMEMORY_API_KEY}"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": ["--prefer-offline", "-y", "server-perplexity-ask"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["--prefer-offline", "-y", "@playwright/mcp@latest"]
    }
  }
}
