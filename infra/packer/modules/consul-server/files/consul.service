[Unit]
Description=Consul
Documentation=https://www.consul.io/
Requires=network-online.target consul-config.service
After=network-online.target consul-config.service
ConditionFileNotEmpty=/etc/consul.d/consul-base.hcl

[Service]
Type=notify
User=consul
Group=consul

ExecStart=/usr/bin/consul agent -config-dir=/etc/consul.d/
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target