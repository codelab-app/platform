[Unit]
Description=Sites App Docker Container
After=docker-login.service docker-watcher.service
Wants=docker-watcher.service
ConditionPathExists=/root/docker/docker-compose.yml

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/root/docker
ExecStart=/usr/local/bin/docker-compose up -d
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target