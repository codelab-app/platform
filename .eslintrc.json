{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": [
    "@nrwl/nx",
    "import",
    "unused-imports",
    "react-hooks",
    "graphql",
    "@emotion",
    "prettier",
    "jest-formatting",
    "simple-import-sort"
    // "@graphql-eslint",
    // "eslint-plugin-graphql"
  ],
  "extends": ["plugin:prettier/recommended"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        // "prefer-destructuring": [
        //   "error",
        //   {
        //     "array": true,
        //     "object": true
        //   },
        //   {
        //     "enforceForRenamedProperties": false
        //   }
        // ],
        // "react/jsx-props-no-spreading": "error",
        "spaced-comment": [
          "error",
          "always",
          {
            "markers": ["/"]
          }
        ],
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [["^\\u0000", "^@?\\w", "^[^.]", "^\\."]]
          }
        ],
        "simple-import-sort/exports": "error",
        "import/newline-after-import": "error",
        "import/first": "error",
        "import/no-cycle": [
          "error",
          {
            "ignoreExternal": true
          }
        ],
        "import/no-duplicates": "error",
        "prettier/prettier": "error",
        "func-style": "error",
        "@typescript-eslint/no-shadow": ["error"],
        "@typescript-eslint/array-type": [
          "error",
          {
            "default": "generic"
          }
        ],
        "@typescript-eslint/no-dynamic-delete": "error",
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              //
              // This is a map of key & their possible values
              //
              // "scope": ["frontend", "backend", "shared", "codegen"]
              // "layer": ["ui-domain", "api-domain", "app", "infra"]
              // "type": ["concrete", "abstract"]
              {
                "sourceTag": "type:abstract",
                "onlyDependOnLibsWithTags": ["type:abstract", "scope:codegen"]
              },
              {
                "sourceTag": "scope:backend",
                "onlyDependOnLibsWithTags": ["scope:backend", "scope:shared"]
              },
              {
                "sourceTag": "scope:frontend",
                "onlyDependOnLibsWithTags": ["scope:frontend", "scope:shared"]
              },
              {
                "sourceTag": "scope:backend",
                "onlyDependOnLibsWithTags": ["scope:backend", "scope:shared"]
              },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared", "type:abstract"]
              },
              {
                "sourceTag": "layer:domain:backend",
                "onlyDependOnLibsWithTags": [
                  "layer:domain:backend",
                  "layer:application:backend",
                  "scope:shared",
                  "layer:infra",
                  "type:abstract"
                ]
              },
              {
                "sourceTag": "scope:publishable",
                "onlyDependOnLibsWithTags": ["scope:publishable"]
              }
            ]
          }
        ],
        "padding-line-between-statements": [
          "error",
          {
            "blankLine": "always",
            "prev": "*",
            "next": "return"
          },
          {
            "blankLine": "always",
            "prev": "*",
            "next": [
              "const",
              "let",
              "var",
              "block",
              "if",
              "block-like",
              "return"
            ]
          },
          {
            "blankLine": "always",
            "prev": ["const", "let", "var", "if", "block-like"],
            "next": "*"
          },
          {
            "blankLine": "any",
            "prev": ["const", "let", "var"],
            "next": ["const", "let", "var", "expression"]
          },
          {
            "blankLine": "never",
            "prev": ["singleline-const", "singleline-let", "singleline-var"],
            "next": ["singleline-const", "singleline-let", "singleline-var"]
          },
          {
            "blankLine": "always",
            "prev": ["*"],
            "next": ["multiline-const", "multiline-let", "multiline-var"]
          },
          {
            "blankLine": "always",
            "prev": ["multiline-const", "multiline-let", "multiline-var"],
            "next": ["*"]
          },
          {
            "blankLine": "any",
            "prev": ["cjs-import"],
            "next": ["const", "let", "var"]
          }
        ],
        "lines-between-class-members": ["error", "always"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "plugin:@nrwl/nx/typescript",
        "plugin:jest-formatting/strict"
      ],
      "rules": {
        "curly": "error",
        "@typescript-eslint/no-explicit-any": "off",
        "import/no-cycle": "error",
        "@typescript-eslint/ban-types": [
          "error",
          {
            "types": {
              "React.FC": {
                "message": "Please read 'Why is `React.FC` discouraged? What about `React.FunctionComponent`/`React.VoidFunctionComponent`?' https://react-typescript-cheatsheet.netlify.app/docs/basic/getting-started/function_components",
                "fixWith": ""
              },
              "FC": {
                "message": "Please read 'Why is `React.FC` discouraged? What about `React.FunctionComponent`/`React.VoidFunctionComponent`?' https://react-typescript-cheatsheet.netlify.app/docs/basic/getting-started/function_components",
                "fixWith": ""
              },
              "React.FunctionComponent": {
                "message": "Please read 'Why is `React.FC` discouraged? What about `React.FunctionComponent`/`React.VoidFunctionComponent`?' https://react-typescript-cheatsheet.netlify.app/docs/basic/getting-started/function_components",
                "fixWith": ""
              },
              "FunctionComponent": {
                "message": "Please read 'Why is `React.FC` discouraged? What about `React.FunctionComponent`/`React.VoidFunctionComponent`?' https://react-typescript-cheatsheet.netlify.app/docs/basic/getting-started/function_components",
                "fixWith": ""
              }
            }
          }
        ]
      }
    },
    {
      "files": ["*.jsx", "*.tsx"],
      "extends": ["plugin:react-hooks/recommended"]
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "parserOptions": {
        "schema": "./schema.api.graphql"
      },
      // the following is required for `eslint-plugin-prettier@<=3.4.0` temporarily
      // after https://github.com/prettier/eslint-plugin-prettier/pull/413
      // been merged and released, it can be deleted safely
      "rules": {
        "prettier/prettier": [
          2,
          {
            "parser": "graphql"
          }
        ]
      }
    },
    // the following is required for `eslint-plugin-prettier@<=3.4.0` temporarily
    // after https://github.com/prettier/eslint-plugin-prettier/pull/415
    // been merged and released, it can be deleted safely
    {
      "files": ["*.js/*.graphql"],
      "rules": {
        "prettier/prettier": 0
      }
    }
  ]
}
