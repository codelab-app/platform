{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2015",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codelab/backend": ["libs/backend/src/index.ts"],
      "@codelab/codegen/graphql": ["libs/codegen/graphql/src/index.ts"],
      "@codelab/codegen/hasura": ["libs/codegen/hasura/src/index.ts"],
      "@codelab/ddd/core": ["libs/ddd/core/src/index.ts"],
      "@codelab/ddd/types": ["libs/ddd/types/src/index.ts"],
      "@codelab/demo": ["libs/tools/plugins/demo/src/index.ts"],
      "@codelab/frontend/apollo": ["libs/frontend/apollo/src/index.ts"],
      "@codelab/frontend/builder": ["libs/frontend/builder/src/index.ts"],
      "@codelab/frontend/cytoscape": ["libs/frontend/cytoscape/src/index.ts"],
      "@codelab/frontend/dgraph": ["libs/frontend/dgraph/src/index.ts"],
      "@codelab/frontend/shared": ["libs/frontend/shared/src/index.ts"],
      "@codelab/frontend/style": ["libs/frontend/style/src/index.ts"],
      "@codelab/modules/app": ["libs/modules/app/src/index.ts"],
      "@codelab/modules/app-api": ["libs/modules/app-api/src/index.ts"],
      "@codelab/modules/atom": ["libs/modules/atom/src/index.ts"],
      "@codelab/modules/atom-api": ["libs/modules/atom-api/src/index.ts"],
      "@codelab/modules/category": ["libs/modules/category/src/index.ts"],
      "@codelab/modules/component": ["libs/modules/component/src/index.ts"],
      "@codelab/modules/element": ["libs/modules/element/src/index.ts"],
      "@codelab/modules/element-api": ["libs/modules/element-api/src/index.ts"],
      "@codelab/modules/lambda": ["libs/modules/lambda/src/index.ts"],
      "@codelab/modules/lambda-api": ["libs/modules/lambda-api/src/index.ts"],
      "@codelab/modules/library": ["libs/modules/library/src/index.ts"],
      "@codelab/modules/page": ["libs/modules/page/src/index.ts"],
      "@codelab/modules/page-api": ["libs/modules/page-api/src/index.ts"],
      "@codelab/modules/style": ["libs/modules/style/src/index.ts"],
      "@codelab/modules/type": ["libs/modules/type/src/index.ts"],
      "@codelab/modules/type-api": ["libs/modules/type-api/src/index.ts"],
      "@codelab/modules/user": ["libs/modules/user/src/index.ts"],
      "@codelab/modules/user-api": ["libs/modules/user-api/src/index.ts"],
      "@codelab/tools/plugins/codelab": [
        "libs/tools/plugins/codelab/src/index.ts"
      ],
      "@codelab/tools/scripts": ["libs/tools/scripts/src/index.ts"],
      "@codelab/ui/d3": ["libs/ui/d3/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
