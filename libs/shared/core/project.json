{
  "root": "libs/shared/core",
  "sourceRoot": "libs/shared/core/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/shared/core/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"],
      "configurations": {
        "ci": {
          "eslintConfig": "libs/shared/core/.eslintrc.ci.json"
        }
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/shared/core"],
      "options": {
        "jestConfig": "libs/shared/core/jest.config.js",
        "passWithNoTests": true,
        "runInBand": true
      }
    }
  },
  "tags": ["scope:shared"]
}
