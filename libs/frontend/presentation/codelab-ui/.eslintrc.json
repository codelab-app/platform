{
  "extends": ["plugin:@nx/react", "../../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "storybook-static"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": [
          "libs/frontend/presentation/codelab-ui/tsconfig.*?.json",
          "libs/frontend/presentation/codelab-ui/tsconfig.storybook.json"
        ]
      },
      "rules": {
        "react/jsx-props-no-spreading": "off",
        "tailwindcss/no-custom-classname": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
