{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": [
      "node",
      "worker-loader",
      "styled-components",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "vite.config.ts"],
  "references": [
    {
      "path": "../../shared/utils/tsconfig.lib.json"
    },
    {
      "path": "../../abstract/application/tsconfig.lib.json"
    },
    {
      "path": "../../application/user/tsconfig.lib.json"
    },
    {
      "path": "../codelab-ui/tsconfig.lib.json"
    },
    {
      "path": "../../application/shared/store/tsconfig.lib.json"
    },
    {
      "path": "../../../shared/abstract/types/tsconfig.lib.json"
    },
    {
      "path": "../../abstract/types/tsconfig.lib.json"
    }
  ]
}
