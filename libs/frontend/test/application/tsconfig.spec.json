{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "jsx": "react-jsx",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom",
      "styled-components",
      "uniforms"
    ]
  },
  "include": [
    "jest.mocks.ts",
    "vite.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
