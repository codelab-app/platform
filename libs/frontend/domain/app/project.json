{
  "name": "frontend-domain-app",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/frontend/domain/app/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/frontend/domain/app/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"],
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/frontend-domain-app.xml",
          "quiet": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/frontend/domain/app"],
      "options": {
        "jestConfig": "libs/frontend/domain/app/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/frontend/domain/app/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/frontend-domain-app",
        "configDir": "libs/frontend/domain/app/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/frontend/domain/app/.storybook --url=http://localhost:4400"
      }
    },
    "test:integration": {
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["[i].spec.ts"],
        "jestConfig": "libs/frontend/domain/app/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      },
      "configurations": {
        "ci": {
          "outputFile": "tmp/reports/test-integration/frontend-domain-app.xml",
          "reporters": ["default", "jest-junit"],
          "parallel": 3
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/frontend/domain/app"]
    },
    "test:unit": {
      "options": {
        "memoryLimit": 8192,
        "parallel": 3,
        "color": true,
        "testPathPattern": ["[^i].spec.ts"],
        "jestConfig": "libs/frontend/domain/app/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      },
      "configurations": {
        "ci": {
          "outputFile": "frontend-domain-app.xml",
          "reporters": ["default", "jest-junit"]
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/frontend/domain/app"]
    }
  },
  "tags": ["scope:frontend", "layer:domain"]
}
