{
  "name": "frontend-domain-domain",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "tags": [
    "projectType:library",
    "type:concrete",
    "scope:frontend",
    "layer:domain"
  ],
  "sourceRoot": "libs/frontend/domain/domain/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/frontend-domain-domain.xml",
          "quiet": true
        }
      },
      "options": {
        "lintFilePatterns": [
          "libs/frontend/domain/domain/**/*.{ts,tsx,js,jsx,graphql}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/frontend/domain/domain"],
      "options": {
        "jestConfig": "libs/frontend/domain/domain/jest.config.ts",
        "reporters": ["default"],
        "runInBand": true
      }
    },
    "test:integration": {
      "defaultConfiguration": "dev",
      "options": {
        "memoryLimit": 8192,
        "color": true,
        "testPathPattern": ["i.spec.ts"],
        "runInBand": true,
        "jestConfig": "libs/frontend/domain/domain/jest.config.ts"
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {
          "parallel": 3
        }
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/frontend/domain/domain"]
    },
    "test:unit": {
      "defaultConfiguration": "dev",
      "options": {
        "color": true,
        "memoryLimit": 8192,
        "parallel": 3,
        "testPathIgnorePatterns": ["i.spec.ts"],
        "jestConfig": "libs/frontend/domain/domain/jest.config.ts"
      },
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        },
        "ci": {}
      },
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/frontend/domain/domain"]
    }
  }
}
