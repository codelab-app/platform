{
  "extends": "../../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./src"
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [
    {
      "path": "../../../abstract/domain/tsconfig.lib.json"
    },
    {
      "path": "../../../abstract/application/tsconfig.lib.json"
    }
  ]
}
