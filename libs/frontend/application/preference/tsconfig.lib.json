{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "jsx": "react-jsx",
    "rootDir": "./src"
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "references": [
    {
      "path": "../../infra/mobx/context/tsconfig.lib.json"
    },
    {
      "path": "../../domain/preference/tsconfig.lib.json"
    },
    {
      "path": "../../abstract/domain/tsconfig.lib.json"
    },
    {
      "path": "../../abstract/application/tsconfig.lib.json"
    }
  ]
}
