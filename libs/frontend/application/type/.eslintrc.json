{
  "extends": [
    "plugin:@nx/react",
    "plugin:@codelab/recommended",
    "../../../../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["libs/frontend/application/type/tsconfig.*?.json"]
      },
      "rules": {
        "barrel-files/avoid-barrel-files": "off",
        "barrel-files/avoid-re-export-all": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.graphql"],
      "rules": {}
    }
  ]
}
