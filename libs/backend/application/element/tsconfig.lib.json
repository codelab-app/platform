{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../../shared/config/env/tsconfig.lib.json"
    },
    {
      "path": "../../infra/core/tsconfig.lib.json"
    },
    {
      "path": "../../infra/adapter/logger/tsconfig.lib.json"
    },
    {
      "path": "../../domain/prop/tsconfig.lib.json"
    },
    {
      "path": "../../domain/element/tsconfig.lib.json"
    },
    {
      "path": "../../domain/component/tsconfig.lib.json"
    },
    {
      "path": "../../domain/atom/tsconfig.lib.json"
    },
    {
      "path": "../../../shared/abstract/core/tsconfig.lib.json"
    }
  ]
}
