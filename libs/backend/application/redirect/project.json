{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "name": "backend-application-redirect",
  "projectType": "library",
  "sourceRoot": "libs/backend/application/redirect/src",
  "tags": [
    "projectType:library",
    "type:concrete",
    "scope:backend",
    "layer:application"
  ],
  "targets": {
    "lint": {
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/backend-application-redirect.xml",
          "quiet": true
        }
      },
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "libs/backend/application/redirect/**/*.{ts,tsx,js,jsx,graphql}"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/backend/application/redirect/jest.config.ts",
        "reporters": ["default"]
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:integration": {
      "configurations": {
        "ci": {
          "parallel": 3
        },
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        }
      },
      "defaultConfiguration": "dev",
      "executor": "@nx/jest:jest",
      "options": {
        "color": true,
        "jestConfig": "libs/backend/application/redirect/jest.config.ts",
        "memoryLimit": 8192,
        "testPathPattern": ["[i].spec.ts"]
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:unit": {
      "configurations": {
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        }
      },
      "defaultConfiguration": "dev",
      "executor": "@nx/jest:jest",
      "options": {
        "color": true,
        "jestConfig": "libs/backend/application/redirect/jest.config.ts",
        "memoryLimit": 8192,
        "parallel": 3,
        "testPathPattern": ["[^i].spec.ts"]
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    }
  }
}
