{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "@codelab/tools-workspace",
  "projectType": "library",
  "sourceRoot": "libs/tools/workspace/src",
  "tags": ["scope:shared"],
  "targets": {
    "build": {
      "configurations": {
        "ci": {},
        "dev": {},
        "prod": {},
        "test": {}
      },
      "defaultConfiguration": "dev",
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          "libs/tools/workspace/*.md",
          {
            "glob": "**/!(*.ts)",
            "input": "./libs/tools/workspace/src",
            "output": "./src"
          },
          {
            "glob": "**/*.d.ts",
            "input": "./libs/tools/workspace/src",
            "output": "./src"
          },
          {
            "glob": "generators.json",
            "input": "./libs/tools/workspace",
            "output": "."
          },
          {
            "glob": "executors.json",
            "input": "./libs/tools/workspace",
            "output": "."
          },
          {
            "glob": "migrations.json",
            "input": "./libs/tools/workspace",
            "output": "."
          }
        ],
        "main": "libs/tools/workspace/src/index.ts",
        "outputPath": "dist/libs/tools/workspace",
        "tsConfig": "libs/tools/workspace/tsconfig.lib.json"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "configurations": {
        "ci": {
          "format": "junit",
          "outputFile": "tmp/reports/lint/tools-workspace.xml",
          "quiet": true
        }
      },
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/tools/workspace/**/*.ts",
          "libs/tools/workspace/package.json",
          "libs/tools/workspace/generators.json",
          "libs/tools/workspace/executors.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/tools/workspace/jest.config.ts",
        "passWithNoTests": true,
        "reporters": ["default"]
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:integration": {
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true,
          "parallel": 3
        },
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        }
      },
      "defaultConfiguration": "dev",
      "executor": "@nx/jest:jest",
      "options": {
        "color": true,
        "jestConfig": "libs/tools/workspace/jest.config.ts",
        "memoryLimit": 8192,
        "passWithNoTests": true,
        "testPathPattern": ["[i].spec.ts"]
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "test:unit": {
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        },
        "dev": {
          "reporters": ["default"]
        },
        "test": {
          "reporters": ["default"]
        }
      },
      "defaultConfiguration": "dev",
      "executor": "@nx/jest:jest",
      "options": {
        "color": true,
        "jestConfig": "libs/tools/workspace/jest.config.ts",
        "memoryLimit": 8192,
        "parallel": 3,
        "passWithNoTests": true,
        "testPathPattern": ["[^i].spec.ts"]
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    }
  }
}
