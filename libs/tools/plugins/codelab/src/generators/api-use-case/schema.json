{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "ApiUseCase",
  "title": "",
  "type": "object",
  "properties": {
    "model": {
      "type": "string",
      "description": "E.g. \"app\", this is the name of the api model",
      "enum": [
        "admin",
        "app",
        "atom",
        "element",
        "hook",
        "lambda",
        "page",
        "tag",
        "type",
        "user"
      ]
    },
    "useCase": {
      "description": "E.g. \"createApp\", use lower camel case",
      "x-prompt": "What name would you like to use for the use case?"
    },
    "graphqlType": {
      "type": "string",
      "description": "GraphQL query type",
      "enum": ["query", "mutation"]
    }
  },
  "required": ["model", "useCase"]
}
